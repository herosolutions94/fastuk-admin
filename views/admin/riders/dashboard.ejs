<section id="dashbaord">
  <div class="contain-fluid">
    <div class="heading">
      <div class="text">
        <h3>Rider</h3>
        <ul>
          <li><a href="">Home</a></li>
          <li class="active"><a href="">Rider</a></li>
        </ul>
      </div>
    </div>
    <div class="dashTable">
      <table class="dataTable display" id="basic-1">
        <thead>
          <tr class="table-scnd-row">
            <th width="5%">
              <p>#</p>
            </th>
            <th width="26%">
              <p>Name</p>
            </th>
            <!-- <th width="15%">
              <p>Email</p>
            </th>
            <th width="10%">
              <p>Phone No</p>
            </th> -->
            <th width="20%">
              <p>Approval Status</p>
            </th>
            <th width="10%">
              <p>City</p>
            </th>
            <th width="10%">
              <p>OTP</p>
            </th>
            <th width="20%">
              <p>Available Balance</p>
            </th>
            <th width="9%">
              <p>Action</p>
            </th>
          </tr>
        </thead>
        <tbody>
          <% if (riders && riders.length > 0) { %> <% riders.forEach((rider,
          index) => { %>
          <tr class="bottom-cntnt" id="rider-<%= rider.id %>">
            <td><p><%= index + 1 %></p></td>
            <td>
              <div class="flex">
                <div class="image">
                  <img
                    src="<%= helpers.getImage(rider.mem_image) %>"
                    alt="Driving License" />
                </div>
                <div class="custm-cntnt">
                  <p><%= rider.full_name %><br /><%= rider.email %></p>
                </div>
              </div>
            </td>
            <td>
              <p><%- helpers.getRiderApprovalStatus(rider.is_approved) %></p>
            </td>
            <td><p><%= rider.city %></p></td>
            <td><p><%= rider.otp %></p></td>
            <td>
              <p>Â£<%= helpers.formatAmount(rider.available_balance) %></p>
            </td>

            <td>
              <div class="btn-group">
                <button
                  type="button"
                  class="dropdown-toggle"
                  data-toggle="dropdown">
                  <i class="fa fa-ellipsis-h"></i>
                </button>
                <ul class="dropdown-menu dropdown-primary" role="menu">
                  <% if (rider.is_approved!=='approved') { %>
                  <li>
                    <a
                      href="/admin/riders/update-status/<%= rider.id %>?is_approved=approved"
                      class="btn btn-success">
                      Approve
                    </a>
                  </li>
                  <% } %>
                  <li>
                    <a
                      href="/admin/riders/update-status/<%= rider.id %>?is_approved=rejected"
                      class="btn btn-danger">
                      Reject
                    </a>
                  </li>
                  <li>
                    <a href="/admin/riders/edit/<%= rider.id %>"
                      ><i class="fa fa-pencil" aria-hidden="true"></i>Edit</a
                    >
                  </li>
                  <li>
                    <a href="/admin/riders/documents/<%= rider.id %>"
                      ><i class="fa fa-file" aria-hidden="true"></i>Add
                      Document</a
                    >
                  </li>
                  <li>
                    <a
                      href="#"
                      class="delete-item"
                      data-id="<%= rider.id %>"
                      data-url="/admin/riders/delete/<%= rider.id %>">
                      <i class="fa fa-trash" aria-hidden="true"></i>Delete</a
                    >
                  </li>
                </ul>
              </div>
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="8"><p>No riders found.</p></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</section>
