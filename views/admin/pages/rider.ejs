                    <div class="col-md-3">
                      <div class="card">
                        <div class="card-body preview">
                          <h5 class="card-title">Image 1</h5>
                          <div class="blog_img">
                            <img
                              src="<%=/uploads/+ contentData.rider_image1 %>"
                              class="card-img-top"
                              alt="" />
                          </div>
                          <div class="in-upload">
                            <button type="button" class="uploadImg">
                              <i class="fa-regular fa-image"></i>choose another
                              image
                            </button>
                            <input type="file" name="rider_image1" class="uploadFile" />
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-9">
                      <div class="txtGrp">
                        <div class="txtGrp">
                          <label class="form-label" for="detail"
                            >Description 1<abbr class="required" title="required"
                              >*</abbr
                            ></label
                          >
                          <textarea
                            class="ckeditor"
                            name="description1"
                            id="description1">
  <%= contentData.description1 || '' %></textarea
                          >
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                        <div class="txtGrp">
                            <label class="form-label">Link Text <abbr
                                    class="required" title="required">*</abbr>
                            </label>
                            <input type="text" name="link_text1" value="<%= contentData.link_text1 || '' %>"
                                class="input">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="txtGrp">
                            <label class="form-label">Link URL <abbr
                                    class="required" title="required">*</abbr>
                            </label>
                            <input type="text" name="link_url1" value="<%= contentData.link_url1 || '' %>"
                                class="input">
                        </div>
                    </div>
                    
        
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <h5>Section 1</h5>
              </div>
              <div class="card-body full_width">
                <div class="row">
                  
                  <div class="col-md-9">
                    <div class="txtGrp">
                      <div class="txtGrp">
                        <label class="form-label" for="detail"
                          >Description 2<abbr class="required" title="required"
                            >*</abbr
                          ></label
                        >
                        <textarea
                          class="ckeditor"
                          name="description2"
                          id="description2">
<%= contentData.description2 || '' %></textarea
                        >
                      </div>
                    </div>
                  </div>
                  <table
                        class="table table-bordered newTable"
                        id="newTable">
                        <tbody>
                          <tr style="background-color: #eee">
                            <th>Text</th>
                            <th width="10%" class="text-center">
                              <a
                                href="javascript:void(0)"
                                id="addNewRowTbl"
                                class="addNewRowTbl full_width"
                                >+ Add</a
                              >
                            </th>
                          </tr>

                          <!-- Render existing sec_text[] values here -->
                          <% if (contentData.sec_text && contentData.sec_text.length >
                          0) { %> <% contentData.sec_text.forEach(function(text) {
                          %>
                          <tr>
                            <td>
                              <input
                                type="text"
                                name="sec_text[]"
                                value="<%= text %>"
                                class="form-control"
                                placeholder="Enter text" />
                            </td>
                            <td class="text-center">
                              <a href="javascript:void(0)" class="removeRow"
                                >Remove</a
                              >
                            </td>
                          </tr>
                          <% }); %> <% } else { %>
                          <!-- Default row when no data is present -->
                          <tr>
                            <td>
                              <input
                                type="text"
                                name="sec_text[]"
                                class="form-control"
                                placeholder="Enter text" />
                            </td>
                            <td class="text-center">
                              <a href="javascript:void(0)" class="removeRow"
                                >Remove</a
                              >
                            </td>
                          </tr>
                          <% } %>
                        </tbody>
                      </table>
            </div>
          </div>
        </div>
    </div>
