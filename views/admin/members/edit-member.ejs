<section id="dashbaord">
  <div class="contain-fluid">
    <div class="heading">
      <div class="text">
        <h3>Edit Member</h3>
      </div>
      <div class="text text2">
        <a href="/admin/members-list" class="webBtn mdBtn greenBtn"
          ><i class="fa-regular fa-arrow-left"></i>Back</a
        >
      </div>
    </div>
    <div class="dashTable">
      <form
        action="/admin/members/update/<%= member.id %>"
        method="POST"
        enctype="multipart/form-data"
        class="frmAjax">
        <div class="card">
          <div class="card-header">
            <h5>General Details</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="mem_fname">First Name:</label>
                  <input
                    type="text"
                    class="input"
                    name="mem_fname"
                    value="<%= member.mem_fname %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="mem_lname">Last Name:</label>
                  <input
                    type="text"
                    class="input"
                    name="mem_lname"
                    value="<%= member.mem_lname %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="mem_email">Email:</label>
                  <input
                    type="text"
                    class="input"
                    name="mem_email"
                    value="<%= member.mem_email %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="mem_phone">Phone:</label>
                  <input
                    type="text"
                    class="input"
                    name="mem_phone"
                    value="<%= member.mem_phone %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="mem_city">City:</label>
                  <input
                    type="text"
                    class="input"
                    name="mem_city"
                    value="<%= member.mem_city %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="mem_state">State:</label>
                  <input
                    type="text"
                    class="input"
                    name="mem_state"
                    value="<%= member.mem_state %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="mem_address1">Address:</label>
                  <input
                    type="text"
                    class="input"
                    name="mem_address1"
                    value="<%= member.mem_address1 %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="switch">Status
                    <input type="checkbox" name="mem_status" /><span
                      class="switch-state bg-primary"></span>
                  </label>
                  <select name="mem_status">
                    <option value="1" <%= member.mem_status == 1 ? 'selected' : '' %>>Active</option>
                    <option value="0" <%= member.mem_status == 0 ? 'selected' : '' %>>Inactive</option>
                </select>
                </div>
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-body preview">
            <h5 class="card-title">Image</h5>
            <div class="blog_img">
              <% if (imageFilenames && imageFilenames[0]) { %>
              <img
                src="<%= helpers.getImage(imageFilenames[0]) %>"
                alt="Main Image"
                class="card-img-top" />

              <% } %>
            </div>
            <div class="in-upload">
              <button type="button" class="uploadImg">
                <i class="fa-regular fa-image"></i>choose another image
              </button>
              <input type="file" class="uploadFile" name="mem_image" />
            </div>
          </div>
          <hr />
          <div class="card-footer text-end">
            <button class="webBtn" type="submit">
              Update <i class="spinner hidden"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
