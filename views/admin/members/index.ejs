<section id="dashbaord">
  <div class="contain-fluid">
    <div class="heading">
      <div class="text">
        <h3>Member</h3>
        <!-- <ul>
          <li><a href="">Home</a></li>
          <li class="active"><a href="">Member</a></li>
        </ul> -->
      </div>
      <!-- <div class="text text2">
        <button class="webBtn mdBtn greenBtn">
          <i class="fa-light fa-plus"></i>Create
        </button>
      </div> -->
    </div>
    <div class="dashTable">
      <table class="dataTable display" id="basic-1">
        <thead>
          <tr class="table-scnd-row">
            <th width="7%">
              <p>#</p>
            </th>
            <th width="19%">
              <p>Name</p>
            </th>
            <th width="15%">
              <p>Email</p>
            </th>
            <th width="14%">
              <p>Phone No</p>
            </th>
            <th width="14%">
              <p>OTP</p>
            </th>
            <th width="14%">
              <p>Status</p>
            </th>
            <th width="12%">
              <p>Verified</p>
            </th>
            <th width="10%">
              <p>Action</p>
            </th>
          </tr>
        </thead>
        <tbody>
          <% if (members && members.length > 0) { %> <% members.forEach((member,
          index) => { %>
          <tr class="bottom-cntnt" id="member-<%= member.id %>">
            <td><p><%= index + 1 %></p></td>
            <td>
              <div class="flex">
                <div class="image">
                  <img
                    src="<%= helpers.getImage(member.mem_image) %>"
                    alt="Member Image" />
                </div>
                <div class="custm-cntnt">
                  <p><%= member.full_name %></p>
                </div>
              </div>
            </td>
            <td><p><%= member.email %></p></td>
            <td><p><%= member.mem_phone %></p></td>
            <td><p><%= member.otp %></p></td>
            <td><p><%- helpers.getStatus(member.mem_status) %></p></td>
            <td>
              <p><%- helpers.getVerifiedStatus(member.mem_verified) %></p>
            </td>
            <td>
              <div class="btn-group">
                <button
                  type="button"
                  class="dropdown-toggle"
                  data-toggle="dropdown">
                  <i class="fa fa-ellipsis-h"></i>
                </button>
                <ul class="dropdown-menu dropdown-primary" role="menu">
                  <li>
                    <a href="/admin/members/edit/<%= member.id %>"
                      ><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a
                    >
                  </li>
                  <li>
                    <a
                      href="#"
                      class="delete-item"
                      data-id="<%= member.id %>"
                      data-url="/admin/members/delete/<%= member.id %>">
                      <i class="fa fa-trash" aria-hidden="true"></i>Delete</a
                    >
                  </li>
                </ul>
              </div>
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="8"><p>No members found.</p></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</section>
