<section id="dashbaord">
  <div class="contain-fluid">
    <div class="heading">
      <div class="text">
        <h3>Edit Business User</h3>
      </div>
      <div class="text text2">
        <a href="/admin/business-users" class="webBtn mdBtn greenBtn"
          ><i class="fa-regular fa-arrow-left"></i>Back</a
        >
      </div>
    </div>
    <div class="dashTable">
      <form
        action="/admin/business-users/update/<%= businessUser.id %>"
        method="POST"
        enctype="multipart/form-data"
        class="frmAjax">
        <div class="card">
          <div class="card-header">
            <h5>General Details</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="first_name">Full Name:</label>
                  <input
                    type="text"
                    class="input"
                    name="full_name"
                    value="<%= businessUser.full_name %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="email">Email:</label>
                  <input
                    type="text"
                    class="input"
                    name="email"
                    value="<%= businessUser.email %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="mem_phone">Phone:</label>
                  <input
                    type="text"
                    class="input"
                    name="mem_phone"
                    value="<%= businessUser.mem_phone %>"
                    required />
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="address">Address:</label>
                  <input
                    type="text"
                    class="input"
                    name="mem_address1"
                    value="<%= businessUser.mem_address1 %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="mem_city">City:</label>
                  <input
                    type="text"
                    class="input"
                    name="mem_city"
                    value="<%= businessUser.mem_city %>"
                    required />
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="mem_dob">mem_dob:</label>
                  <input
                    type="text"
                    class="input"
                    name="mem_dob"
                    value="<%= businessUser.mem_dob %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="business_name">business_name:</label>
                  <input
                    type="text"
                    class="input"
                    name="business_name"
                    value="<%= businessUser.business_name %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="business_type">business_type:</label>
                  <input
                    type="text"
                    class="input"
                    name="business_type"
                    value="<%= businessUser.business_type %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="designation">designation:</label>
                  <input
                    type="text"
                    class="input"
                    name="designation"
                    value="<%= businessUser.designation %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="parcel_type">parcel_type:</label>
                  <input
                    type="text"
                    class="input"
                    name="parcel_type"
                    value="<%= businessUser.parcel_type %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="parcel_weight">parcel_weight:</label>
                  <input
                    type="text"
                    class="input"
                    name="parcel_weight"
                    value="<%= businessUser.parcel_weight %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="shipment_volume">shipment_volume:</label>
                  <input
                    type="text"
                    class="input"
                    name="shipment_volume"
                    value="<%= businessUser.shipment_volume %>"
                    required />
                </div>
              </div>
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="delivery_speed">delivery_speed:</label>
                  <input
                    type="text"
                    class="input"
                    name="delivery_speed"
                    value="<%= businessUser.delivery_speed %>"
                    required />
                </div>
              </div>
              
              
              
              <div class="col-md-6">
                <div class="txtGrp">
                  <label class="form-label" for="state">Status:</label>
                  <label class="switch">
                    <span
                      class="switch-state bg-primary"></span>
                  </label>
                  <select name="status">
                    <option value="1" <%= businessUser.status == 1 ? 'selected' : '' %>>Active</option>
                    <option value="0" <%= businessUser.status == 0 ? 'selected' : '' %>>Inactive</option>
                </select>
                </div>
              </div>
            

              <div class="clearfix"></div>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-body preview">
            <h5 class="card-title">Image</h5>
            <div class="blog_img">
              <% if (imageFilenames && imageFilenames[0]) { %>
              <img
                src="<%= helpers.getImage(imageFilenames[0]) %>"
                alt="Main Image"
                class="card-img-top" />

              <% } %>
            </div>
            <div class="in-upload">
              <button type="button" class="uploadImg">
                <i class="fa-regular fa-image"></i>choose another image
              </button>
              <input type="file" class="uploadFile" name="mem_image"                         
              value="<%= editBusinessUserId ? businessUser.mem_image : '' %>"
              />
            </div>
          </div>
          <hr />
          <div class="card-footer text-end">
            <button class="webBtn" type="submit">
              Update <i class="spinner hidden"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
    <% if (addresses && addresses.length > 0) { %>
    <hr />
    <div class="dashTable">
         <div class="card">
            <div class="card-header">
              <h5>General Details</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered text-center align-middle">
                    <tr>
                        <td>Sr.</td>
                        <td>Name</td>
                        <td>Phone</td>
                        <td>Postal Code</td>
                        <td width="20%">Address</td>
                        <td>City</td>
                        <td>Default</td>
                    </tr>
                    <tr>
                      <% addresses.forEach((address,index) => { %>
                        <tr>
                          <td><p><%= index + 1 %></p></td>
                          <td><p><%= address.first_name+" "+address.last_name %></p></td>
                          <td><p><%= address.phone_number %></p></td>
                          <td><p><%= address.post_code %></p></td>
                          <td><p><%= address.address %></p></td>
                          <td><p><%= address.city %></p></td>
                          <td><p><%= address.default==1 ? 'Yes' : 'No' %></p></td>
                        </tr>
                      <% }) %>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <% } %>
