<section id="dashbaord">
  <div class="contain-fluid">
    <div class="heading">
      <div class="text">
        <h3>Request Quote</h3>
        <ul>
          <li><a href="/admin/dashbaord">Home</a></li>
          <li class="active"><a href="">Quote Detail</a></li>
        </ul>
      </div>
    </div>
    <div class="dashTable">
      <div class="card">
        <div class="card-header">
          <h5>Order Details:</h5>
        </div>

        <div class="card-body">
          <div class="list-group details-group">
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p>
                  <strong>Vehicle Price: </strong>£<%= order.vehicle_price %>
                </p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p><strong>Total Amount: </strong>£<%= order.total_amount %></p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p>
                  <strong>Source Post Code: </strong><%= order.source_postcode
                  %>
                </p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p>
                  <strong>Source Address: </strong><%= order.source_address %>
                </p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p><strong>Source Name: </strong><%= order.source_name %></p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p>
                  <strong>Source Phone Number: </strong><%=
                  order.source_phone_number %>
                </p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p><strong>Source City: </strong><%= order.source_city %></p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p>
                  <strong>Destination Post Code: </strong><%=
                  order.dest_postcode %>
                </p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p>
                  <strong>Destination Address: </strong><%= order.dest_address
                  %>
                </p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p><strong>Destination Name: </strong><%= order.dest_name %></p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p>
                  <strong>Destination Phone Number: </strong><%=
                  order.dest_phone_number %>
                </p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p><strong>Destination City: </strong><%= order.dest_city %></p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p>
                  <strong>Payment Method: </strong><%= order.payment_method %>
                </p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p>
                  <strong>Assigned Date: </strong><%= helpers.toUKDateFormat(order.assigned_date) %>
                </p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p>
                  <strong>Created Date: </strong><%=
                  helpers.toUKDateFormat(order.created_date) %>
                </p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p>
                  <strong>Start Date: </strong><%=
                  helpers.toUKDateFormat(order.start_date) %>
                </p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p><strong>Notes: </strong><%= order.notes %></p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p><strong>User: </strong><img src="<%= helpers.getImage(order.member_dp) %>" alt="User Image" class="user-image" style="width: 50px; height: 50px; border-radius: 50%;"><%= order?.member_name %></p>
              </div>
            </div>
              <div class="list-group-item">
                <div class="d-flex w-100">
                  <p><strong>Rider: </strong><img src="<%= helpers.getImage(order.rider_dp) %>" alt="User Image" class="user-image" style="width: 50px; height: 50px; border-radius: 50%;"><%= order?.rider_name %></p>
                </div>
              </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p><strong>Tax: </strong>£<%= order.tax %></p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
                <p><strong>Rider Price: </strong>£<%= order.rider_price %></p>
              </div>
            </div>
            <div class="list-group-item">
              <div class="d-flex w-100">
               <h3>Parcels</h3>
            <% if (order?.parcels?.length > 0) { %>
            <table class="table">
              <thead>
                <tr>
                  <th>Parcel Number</th>
                  <th>Parcel Type</th>
                  <th>Dimensions (L × W × H)</th>
                  <th>Weight (kg)</th>
                  <th>Price</th>
                  <th>Source</th>
                  <th>Destination</th>
                  <th>Distance (miles)</th>
                </tr>
              </thead>
              <tbody>
                <% order?.parcels.forEach(parcel => { %>
                <tr>
                  <td><%= parcel.parcel_number %></td>
                  <td><%= parcel.parcel_type %></td>
                  <td>
                    <%= parcel.length %> × <%= parcel.width %> × <%=
                    parcel.height %>
                  </td>
                  <td><%= parcel.weight %></td>
                  <td>£<%= parcel.price %></td>
                  <td><%= parcel.source_address %></td>
                  <td><%= parcel.destination_address %></td>
                  <td><%= parcel.distance %></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
            <% } else { %>
            <p>No parcels found for this order.</p>
            <% } %>
            <h3>Invoices</h3>
            <% if (order?.invoices.length > 0) { %>
            <table class="table">
              <thead>
                <tr>
                  <th>Type</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Created Date</th>
                </tr>
              </thead>
              <tbody>
                <% order?.invoices.forEach(invoice => { %>
                <tr>
                  <td><%= invoice.type %></td>
                  <td>£<%= invoice.amount %></td>
                  <td><p>
                    <% if (invoice.status === 1) { %>
                    <a href="#" class="status badge success">Active</a>
                    <% } else { %>
                    <a href="#" class="status badge warning">Inactive</a>
                    <% } %>
                  </p></td>
                  
                  <td>
                    <%= helpers.convertUtcToUkFormat(invoice.created_date)
                    %>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
            <% } else { %>
            <p>No invoices found for this order.</p>
            <% } %>
            <h3>Reviews</h3>
            <% if (order?.reviews.length > 0) { %>
            <table class="table">
              <thead>
                <tr>
                  <th>Review</th>
                  <th>Rating</th>
                  <th>Created Date</th>
                </tr>
              </thead>
              <tbody>
                <% order?.reviews.forEach(review => { %>
                <tr>
                  <td><%= review.review %></td>
                  <td>
                    <p class="rateYo"></p>
                  </td>
                  <td>
                    <%= helpers.convertUtcToUkFormat(review.created_at) %>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
            <% } else { %>
            <p>No reviews found for this order.</p>
            <% } %>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
