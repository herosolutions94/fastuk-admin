<section id="dashbaord">
  <div class="contain-fluid">
    <div class="heading">
      <div class="text">
        <h3>Faqs</h3>
        <ul>
          <li><a href="">Home</a></li>
          <li class="active"><a href="">Faqs</a></li>
        </ul>
      </div>
      <div class="text text2">
        <a href="/admin/faqs/add" class="webBtn mdBtn greenBtn"
          ><i class="fa-light fa-plus"></i>Add New</a
        >
      </div>
    </div>
    <div class="dashTable">
      <table class="dataTable display" id="basic-1">
        <thead>
          <tr class="table-scnd-row blog-table">
            <th width="10%">
              <p>Sr#</p>
            </th>
            <th width="20%">
              <p>Question</p>
            </th>
            <th width="15%">
              <p>Status</p>
            </th>
            <th width="10%">
              <p>Action</p>
            </th>
          </tr>
        </thead>
        <tbody>
          <% if (faqs && faqs.length > 0) { %> <% faqs.forEach((faq, index) => {
          %>
          <tr class="bottom-cntnt" id="faq-<%= faq.id %>">
            <td>
              <p><%= index + 1 %></p>
            </td>
            <td>
              <p><%= faq.ques %></p>
            </td>
            <td>
              <p>
                <% if (faq.status === 1) { %>
                <a href="#" class="status badge success">Active</a>
                <% } else { %>
                <a href="#" class="status badge warning">Inactive</a>
                <% } %>
              </p>
            </td>
            <td>
              <div class="btn-group">
                <button
                  type="button"
                  class="dropdown-toggle"
                  data-toggle="dropdown">
                  <i class="fa fa-ellipsis-h"></i>
                </button>
                <ul class="dropdown-menu dropdown-primary" role="menu">
                  <li>
                    <a href="/admin/faqs/edit/<%= faq.id %>"
                      ><i class="fa fa-pencil" aria-hidden="true"></i>Edit</a
                    >
                  </li>
                  <li>
                    <a
                      href="#"
                      class="delete-item"
                      data-id="<%= faq.id %>"
                      data-url="/admin/faqs/delete/<%= faq.id %>">
                      <i class="fa fa-trash" aria-hidden="true"></i> Delete
                    </a>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="8"><p>No faqs found.</p></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</section>
