<section id="dashbaord">
  <div class="contain-fluid">
    <div class="heading">
      <div class="text">
        <h3>Testimonials</h3>
        <!-- <ul>
          <li><a href="">Home</a></li>
          <li class="active"><a href="">Testimonials</a></li>
        </ul> -->
      </div>
      <div class="text text2">
        <a href="/admin/testimonial/add" class="webBtn mdBtn greenBtn"
          ><i class="fa-light fa-plus"></i>Add New</a
        >
      </div>
    </div>

    <div class="dashTable">
      <table class="dataTable display" id="basic-1">
        <thead>
          <tr class="table-scnd-row blog-table">
            <th width="10%">
              <p>Sr#</p>
            </th>
            <th width="15%">
              <p>Image</p>
            </th>
            <th width="20%">
              <p>Name</p>
            </th>
            <th width="20%">
              <p>designation</p>
            </th>
            <th width="10%">
              <p>Rating</p>
            </th>
            <th width="15%">
              <p>Status</p>
            </th>
            <th width="10%">
              <p>Action</p>
            </th>
          </tr>
        </thead>
        <tbody>
          <% if (testimonials_rows && testimonials_rows.length > 0) { %> <%
            testimonials_rows.forEach((testimonial, index) => { %>
          <tr class="bottom-cntnt" id="testimonial-<%= testimonial.id %>">
            <td>
              <p><%= index + 1 %></p>
            </td>
            <td>
              <div class="image-blog">
                <img
                  src="<%= helpers.getImage(testimonial.testi_image) %>"
                  alt="<%= testimonial.name %> Image" />
              </div>
            </td>
            <td>
              <p><%= testimonial.title %></p>
            </td>
            <td>
              <p><%= testimonial.designation %></p>
            </td>
            <td>
              <p class="rateYo"></p>
            </td>
            <td>
              <p>
                <% if (testimonial.status === 1) { %>
                <a href="#" class="status badge success">Active</a>
                <% } else { %>
                <a href="#" class="status badge warning">Inactive</a>
                <% } %>
              </p>
            </td>
            <td>
              <div class="btn-group">
                <button
                  type="button"
                  class="dropdown-toggle"
                  data-toggle="dropdown">
                  <i class="fa fa-ellipsis-h"></i>
                </button>
                <ul class="dropdown-menu dropdown-primary" role="menu">
                  <li>
                    <a href="/admin/testimonial/edit/<%= testimonial.id %>"
                      ><i class="fa fa-pencil" aria-hidden="true"></i>Edit</a
                    >
                  </li>
                  <li>
                    <a
                      href="#"
                      class="delete-item"
                      data-id="<%= testimonial.id %>"
                      data-url="/admin/testimonial/delete/<%= testimonial.id %>">
                      <i class="fa fa-trash" aria-hidden="true"></i> Delete
                    </a>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="8"><p>No riders found.</p></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</section>
