            <div class="row">
              <div class="col-md-12">
                <div class="txtGrp">
                  <div class="row">
                    <div class="col-md-12">
                      <label class="form-label">
                        Payment Mode
                        <abbr class="required" title="required">*</abbr>
                      </label>
                      <select
                        type="text"
                        name="site_sandbox"
                        class="input">
                        <option value="1" <%= settings.site_sandbox === '1' ? 'selected' : '' %>>Testing</option>
