<section id="dashbaord">
  <div class="contain-fluid">
    <div class="heading">
      <div class="text">
        <h3>Edit Testimonial</h3>
        <ul>
          <li><a href="/admin/dashbaord">Dashboard</a></li>
          <li class="active"><a href="">Edit Testimonial</a></li>
        </ul>
      </div>
      <div class="text text2">
        <a href="/admin/testimonial" class="webBtn mdBtn greenBtn"
          ><i class="fa-regular fa-arrow-left"></i>Cancel</a
        >
      </div>
    </div>
    <div class="dashTable">
      <div class="card editor_card">
        <div class="card-header">
          <h5>Testimonial Block</h5>
        </div>
        <div class="card-body full_width">
          <form
            id="editTestimonialForm"
            class="frmAjax"
            action="/admin/testimonials/update/<%= testimonial.id %>"
            method="post"
            enctype="multipart/form-data">
            <div class="row">
              <div class="col-md-3">
                <div class="card">
                  <div class="card-body preview">
                    <h5 class="card-title">Image</h5>
                    <div class="blog_img">
                      <% if (imageFilenames && imageFilenames[0]) { %>

                      <img
                        src="<%= helpers.getImage(imageFilenames[0] )%>"
                        class="card-img-top"
                        alt="" />
                      <% } %>
                    </div>
                    <div class="in-upload">
                      <button type="button" class="uploadImg">
                        <i class="fa-regular fa-image"></i>choose another image
                      </button>
                      <input
                        type="file"
                        name="testi_image"
                        value="<%= editTestimonialId ? testimonial.testi_image : '' %>"
                        class="uploadFile" />
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-9">
                <div class="row switch-showcase">
                  <div class="col-md-2">
                    <div class="txtGrp">
                      <label class="form-label">Status</label>
                      <select name="status" class="input">
                        <option value="1" <%= testimonial.status == 1 ? 'selected' : '' %>>Active</option>
                        <option value="0" <%= testimonial.status == 0 ? 'selected' : '' %>>Inactive</option>
                    </select>
                    </div>
                  </div>

                  <div class="col-md-5">
                    <div class="txtGrp">
                      <label class="form-label" for="title"
                        >Name<abbr class="required" title="required"
                          >*</abbr
                        ></label
                      >
                      <input
                        class="input"
                        id="title"
                        type="text"
                        name="title"
                        value="<%= editTestimonialId ? testimonial.title : '' %>" />
                    </div>
                  </div>
                  <div class="col-md-5">
                    <div class="txtGrp">
                      <label class="form-label" for="title"
                        >Designation<abbr class="required" title="required"
                          >*</abbr
                        ></label
                      >
                      <input
                        class="input"
                        id="title"
                        type="text"
                        name="designation"
                        value="<%= editTestimonialId ? testimonial.designation : '' %>" />
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="txtGrp">
                      <label class="form-label" for="detail"
                        >Description<abbr class="required" title="required"
                          >*</abbr
                        ></label
                      >
                      <textarea
                        class="ckeditor"
                        name="description"
                        id="editor1">
<%= editTestimonialId ? testimonial.description : '' %></textarea
                      >
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="card-footer text-end">
              <button class="webBtn" type="submit">
                Update Content <i class="spinner hidden"></i>
              </button>
            </div>
          </form>
        </div>
        <hr />
      </div>
    </div>
  </div>
</section>
